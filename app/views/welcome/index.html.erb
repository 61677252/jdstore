<div class="lp-section-4">
  <div class="ftitle">
    <div class="mtsize"> 比利时 </div>
    <div class="stsize">
      /啤酒应该从这里出发
    </div>
  </div>
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-xs-6 col-md-3">
        <div class="item">
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <div class="pic">
                <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail", size: "250x250") %>
              </div>
            <% else %>
              <div class="pic">
                <%= image_tag("http://placehold.it/200x200&text=NoPic",class: "thumbnail",size: "200x200")%>
              </div>
            <% end %>
          <% end %>

          <div class="name">
            <%= product.title %>
          </div>
          <div class="price">
            ¥ <%= product.price%>
          </div>
        </div>
     </div>
    <% end %>
  </div>
